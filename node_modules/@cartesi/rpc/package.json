{
  "name": "@cartesi/rpc",
  "version": "2.0.0-alpha.9",
  "description": "Cartesi JSON-RPC Client",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "json-rpc-2.0": "^1.7.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "npm-run-all": "^4.1.5",
    "tsdown": "^0.13.0",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "tsdown",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "tsdown --watch",
    "lint": "biome check"
  }
}